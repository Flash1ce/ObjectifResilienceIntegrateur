                            <button class="btn btn-outline-primary" type="submit"><img style="width:40%;" src="~/icons/searchIcon.svg" /></button>
                            <a class="btn btn-outline-primary" href="?tab=tutoriels"><img style="width:40%;" src="~/icons/refresh.svg" /></a>
                        </div>
                    </div>
                    <div style="margin-bottom:1em;">
                        <a href="/Tutoriel/CreationTuto" class="btn btn-primary btn-sm"><img src="~/icons/addIcon.svg" /> Ajouter un tutoriel</a>
                    </div>
                </form>
                if (lstTutos != null && lstTutos.Count > 0)
                {
                    foreach (Tutos tuto in lstTutos)
                    {
                        @if (!tuto.EstPublier)
                        {
                            <div class="list-group-item ">
                                <div class="row">
                                    <div class="col-9">
                                        <div class="row">
                                            <div class="col-2">
                                                @if (tuto.EstPublier)
                                                {
                                                    <img src="~/icons/published.svg" style="width:2em; height:2em;" />
                                                }
                                                else
                                                {
                                                    <img src="~/icons/unpublished.svg" style="width:2em; height:2em;" />
                                                }
                                            </div>
                                            <div class="col-8">
                                                <h3>@tuto.Titre</h3>
                                            </div>
                                        </div>
                                        <div class="row">
                                            @if (tuto.EstPublier)
                                            {
                                                <p style="text-align:center;">Status: Publié</p>
                                            }
                                            else
