@page "{id:Guid?}"
@using Web.Pages
@model Web.Pages.UserModel
@using Domain.Entities
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Utilisateur";
}
<!-- Entête de la page (Titre + btn retour) -->
<nav class="navbar navbar-light shadow-sm">
    <div class="container-fluid">
        @if (@ViewContext.RouteData.Values["id"] is not null)
        {
            <h1>Modification d'un utilisateur</h1>
        }
        else
        {
            <h1>Ajout d'un utilisateur</h1>
        }
        <div class="d-flex">
            <form method="post" asp-page="adminMenu" style="margin-right:0.4rem;">
                <button type="submit" class="btn btn-outline-primary" asp-page-handler="adminMenu">Retour</button>
            </form>
        </div>
    </div>
</nav>
<div class="container">
    <form method="post">
        <input type="hidden" asp-for="user.Id" />
        <div class="row">
            <div class="col-4">
            </div>
            <div class="col-4">
                <br />
                <label asp-for="user.FirstName">Prénom</label>
                <input asp-for="user.FirstName" required style="width:100% !important" />
            </div>
            <div class="col-4"></div>
        </div>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <label asp-for="user.LastName">Nom de Famille</label>
                <input asp-for="user.LastName" required style="width:100% !important" />
            </div>
            <div class="col-4"></div>
        </div>
        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                <label asp-for="user.Email">Courriel</label>
                <input asp-for="user.Email" required style="width:100% !important" />
            </div>
            <div class="col-4"></div>
        </div>
        <br />
        @if (@ViewContext.RouteData.Values["id"] is not null)
        {
            <div class="row" style="justify-content:center">
                <input name="btnSave" type="submit" value="Sauvegarder les changements" class="btn btn-success form-control" style="width:15em !important; margin:1em;" />
                <input name="btnDelete" type="submit" value="Supprimer l'utilisateur" class="btn btn-danger form-control" style="width:15em !important; margin:1em;" />
            </div>
        }
        else
        {
            <div class="row" style="justify-content:center">
                <input name="btnAdd" type="submit" value="Ajouter l'utilisateur" class="btn btn-success form-control" style="width:15em !important; margin:1em;" />
                <a name="btnAnnuler" class="btn btn-danger form-control" style="width:15em !important; margin:1em;" asp-page="adminMenu">Annuler</a>
            </div>
        }
    </form>
</div>
