@using Domain.Entities

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gwenael</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css"
          integrity="sha384-ejwKkLla8gPP8t2u0eQyL0Q/4ItcnyveF505U0NIobD/SMsNyXrLti6CWaD0L52l" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js" integrity="sha512-n/4gHW3atM3QqRcbCn6ewmpxcLAHGaDjpEBu4xZd47N0W2oQ+6q7oc3PXstrJYXcbNU1OHdQ1T7pAP+gi5Yu8g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />

    <environment exclude="Production">
        <meta name="robots" content="noindex">
    </environment>
</head>

<body>

    <div class="globalContainer page">

        <nav class="navbar-expand-lg  navbar-light bg-light">
            <div class="div-nav-firstrow container-fluid">
                <a asp-page="/Index" class="navbar-brand borderCancell"><img src="../images/CJC-ObjectifResilience-Mangue.png" alt="image du site" title="image du site" /></a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="margin-top:1rem">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="div-nav-secondrow">

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="navItem">
                            <a class="nav-link" href="/indexArticles">Articles</a>
                        </li>

                        <li class="navItem">
                            <a class="nav-link" href="/Tutoriel/Index">Tutoriels</a>
                        </li>

                        <li class="navItem">
                            <a class="nav-link" href="/AudioFolder/PoadcastPage">Podcast</a>
                        </li>


                        @*@foreach (var nouvellePage in ViewData["newPages"] as IList<NewPage>)
                        {
                            <li class="navItem">
                                <a class="nav-link" href="/NewPage?Titre=@nouvellePage.Titre">@nouvellePage.Titre</a>
                            </li>
                        }*@
                    </ul>
                    <div>
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>

        </nav>

        <div class="body-content main affichageEtendu containerMain z-index -2">
            @RenderBody()
            <footer>
                <div class="footer">
                    <div class="footer-part1" style="display:flex;flex-direction:column;">
                        <div style="display:flex;justify-content:space-between">
                            <div><p>Ou nous trouver : 200 Adresse a Quebec QC</p></div>

                            <div><p>Nos informations : prenom - nom - autres infos</p></div>
                        </div>
                        <div>
                            <p>Nos coordonnees : 418-000-0000 - Projet@gmail.com</p>
                        </div>

                    </div>

                    <div class="footer-part2">
                        <p>&copy; @DateTime.Now.Year - Gwenael</p>
                    </div>
                </div>


            </footer>
        </div>


    </div>


    @RenderSection("Scripts", required: false)
    <script src="https://code.jquery.com/jquery-3.6.0.js"
            integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" c
            rossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

</body>
</html>