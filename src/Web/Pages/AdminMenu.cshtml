    <br />
    <table class="table">
        @if (ViewData["Tab"] is not null)
        {
            @if (@ViewData["Tab"].ToString() == "roles")
            {
                <thead>
                    <tr>
                        <th scope="col">Utilisateurs</th>
                        <th scope="col">Rôles</th>
                    </tr>
                </thead>
                <tr>
                    <th>
                        <div class="list-group" id="myList" role="tablist">
                            @if (ViewData["selectedUser"] is not null)
                            {
                                <h3>Utilisateur Selectionné</h3>
                                <a class="list-group-item list-group-item-action">@userRole1.Email</a>
                            }
                        </div>
                        <br />
                        <br />
                        <form method="post" style="display:flex; justify-content: space-evenly;">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" type="search" placeholder="Recherche" required name="rechercheValeurUtilisateurRole">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" type="submit"><img style="width:40%;" src="~/icons/searchIcon.svg" /></button>
                                    <a class="btn btn-outline-primary" href="?tab=roles"><img style="width:40%;" src="~/icons/refresh.svg" /></a>
                                </div>
                            </div>
                        </form>
                        <br />
                        <div class="list-group" id="myList" role="tablist">
                            @if (ViewData["lstUsers"] is not null && userList1.Count > 0)
                            {
                                @foreach (var user in ViewData["lstUsers"] as IList<User>)
                                {
                                    <a href="?tab=roles&guid=@user.Id" class="list-group-item list-group-item-action">@user.Email</a>
                                }
                            }
                            else
                            {
                                <div class="container">
                                    <div class="col-12">
                                        <p style="text-align:center;">Aucun résultat</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </th>
                    <th>
                        <br />
                        <br />
                        @if (ViewData["msgErreur"] is not null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <div class="row">
                                    @ViewData["msgErreur"]
                                </div>
                            </div>
                        }
                        @if (ViewData["userRoles"] is not null)
                        {
                            <div class="container">

                                @foreach (var roleUser in ViewData["userRoles"] as List<Role>)
                                {
                                    <div class="list-group-item">
                                        <div class="row">
                                            <div class="col-8">
                                                <p>@roleUser.Name</p>
                                            </div>
                                            <div class="col-4">
                                                <form method="post">
                                                    <input type="hidden" name="name" asp-for="@roleUser.Name" />
                                                    <input name="btnDeleteRole" type="submit" value="Retirer" class="btn btn-danger form-control" />
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (lstSelect.Count > 0)
                                {
                                    <div class="list-group-item">
                                        <form method="post">
                                            <div class="row">
                                                <div class="col-8">
                                                    <p>Sélectionner un rôle à ajouter :</p>
                                                    <select class="form-control" name="selectRole">
                                                        @foreach (var roleSelect in ViewData["selectRoles"] as List<Role>)
                                                        {
                                                            <option value="@roleSelect.Name">@roleSelect.Name</option>
                                                        }
                                                    </select>
                                                </div>
                                                <div class="col-4" style="align-self:end;">
                                                    <input name="btnAjoutRole" type="submit" value="Ajouter" class="btn btn-primary form-control" />
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                }

                            </div>
                        }
                        else
                        {
                            <div class="container">
                                <div class="row">
                                    <div class="col-12">
                                        <p style="text-align:center;">Sélectionner un utilisateur afin d'afficher ces rôles.</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </th>

                </tr>
            }
            else if (@ViewData["Tab"].ToString() == "utilisateurs")
            {
                <form method="post" style="display:flex; justify-content: right;">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Recherche" required name="rechercheValeurUtilisateur">
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary" type="submit"><img style="width:40%;" src="~/icons/searchIcon.svg" /></button>
                            <a class="btn btn-outline-primary" href="?tab=utilisateurs"><img style="width:40%;" src="~/icons/refresh.svg" /></a>
                        </div>
                    </div>
                    <div style="margin-bottom:1em;">
                        <a asp-page="user" asp-route-id="" class="btn btn-primary btn-sm"><img src="~/icons/addIcon.svg" /> Ajouter un utilisateur</a>
                    </div>
                </form>
                <thead>
                    <tr>
                        <th scope="col">Actif</th>
                        <th scope="col">Courriel</th>
                        <th scope="col">Rôles</th>
                        <th scope="col">Date de création</th>
                        <th scope="col"></th>

                    </tr>
                </thead>
                @if (ViewData["tupleUsers"] is not null && lstTupleUser.Count > 0)
                {
                    @foreach (var tupleUser in ViewData["tupleUsers"] as List<(User, List<Role>)>)
                    {
                        <tbody>
                            <tr>
                                @if (tupleUser.Item1.Active == true)
                                {
                                    <td><img src="~/icons/verifiedUser.svg" style="width: 1em; height:1em;" /></td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                <td>@tupleUser.Item1.Email</td>
                                <td>
                                    @foreach (var role in tupleUser.Item2 as List<Role>)
                                    {
                                        <p>@role</p>
                                    }
                                </td>
                                <td>@tupleUser.Item1.CreationDate.ToString("dd/MM/yyyy")</td>

                                <td>
                                    <div class="row" style="display:inline-flex;">
                                        <a asp-page="user" asp-route-id="@tupleUser.Item1.Id" class="btn btn-primary btn-sm" style="width:fit-content;"><img src="~/icons/editIcon.svg" style="width:fit-content;" /></a>
                                        <button type="button" data-bs-toggle="modal" data="@tupleUser.Item1.Id" data-id="@tupleUser.Item1.Id" class="open-AddBookDialog btn-sm btn-danger" data-bs-target="#modalValideDelete" style="margin-right:0.2rem; width:fit-content;"><img src="~/icons/deleteIcon.svg" /></button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    }
                }
                else
                {
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <p style="text-align:center;">Aucun résultat</p>
                            </div>
                        </div>
                    </div>
                }
                <!-- Modal -->
                <div class="modal" id="modalValideDelete" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalValideDeleteLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalValideDeleteLabel">Confirmation!</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Cette action n’est pas réversible, est-ce que vous voulez vraiment supprimer cet utilisateur?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="confirmSuppressionUser()">Oui</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (ViewData["Tab"].ToString() == "demandes")
            {
                <form method="post" style="display:flex; justify-content: right;">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Recherche" required name="rechercheValeurDemande">
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary" type="submit"><img style="width:40%;" src="~/icons/searchIcon.svg" /></button>
                            <a class="btn btn-outline-primary" href="?tab=demandes"><img style="width:40%;" src="~/icons/refresh.svg" /></a>
                        </div>
                    </div>
                </form>
                @if (ViewData["lstNonActiver"] is not null)
                {
                    @foreach (var user in ViewData["lstNonActiver"] as List<User>)
                    {
                        <div class="list-group-item ">
                            <div class="row">
                                <div class="col-6">
                                    <p>@user.UserName</p>
                                </div>
                                <div class="col-3">
                                    <form method="post">
                                        <input type="hidden" name="name" value="@user.Id" />
                                        <input name="btnAccepter" type="submit" value="Accepter" class="btn btn-primary form-control" />
                                    </form>
                                </div>
                                <div class="col-sm">
                                    <form method="post">
                                        <input type="hidden" name="name" value="@user.Id" />
                                        <input name="btnRefuser" type="submit" value="Refuser" class="btn btn-danger form-control" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <br />
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <p style="text-align:center;">Aucune demande</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else if (ViewData["Tab"].ToString() == "podcasts")
            {
                <form method="post" style="display:flex; justify-content: right;">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Recherche" required name="rechercheValeurPodcast">
                        <div class="input-group-append">
                            <button class="btn btn-outline-primary" type="submit"><img style="width:40%;" src="~/icons/searchIcon.svg" /></button>
                            <a class="btn btn-outline-primary" href="?tab=podcasts"><img style="width:40%;" src="~/icons/refresh.svg" /></a>
                        </div>
                    </div>
                    <div style="margin-bottom:1em;">
                        <a href="/AudioFolder/PoadcastForm" class="btn btn-primary btn-sm"><img src="~/icons/addIcon.svg" /> Ajouter un podcast</a>
                    </div>
                </form>
                @if (lstAudios is not null && lstAudios.Count > 0)
                {
                    @foreach (var audio in ViewData["lstAudios"] as IList<Audio>)
                    {
                        <div class="list-group-item ">
                            <div class="row">
                                <div class="col-9">
                                    <div class="row">
                                        <div class="col-2">
                                            @if (audio.EstPublier)
                                            {
                                                <img src="~/icons/published.svg" style="width:2em; height:2em;" />
                                            }
                                            else
                                            {
                                                <img src="~/icons/unpublished.svg" style="width:2em; height:2em;" />
                                            }
                                        </div>
                                        <div class="col-8">
                                            <h3>@audio.titre</h3>
                                        </div>
                                    </div>
                                    <div class="row">
                                        @if (audio.EstPublier)
                                        {
                                            <p style="text-align:center;">Statut: Publié</p>
                                        }
                                        else
                                        {
                                            <p style="text-align:center;">Statut: Non publié</p>
                                        }
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div class="row" style="justify-content:center;">
                                        <a asp-page="./AudioFolder/PoadcastDetail" asp-route-id="@audio.ID" class="btn-sm btn-primary" style="margin-right:0.2rem; width:fit-content;"><img src="~/icons/editIcon.svg" /></a>
                                        <button type="button" data-bs-toggle="modal" data="@audio.ID" data-id="@audio.ID" class="open-dialogAudio btn-sm btn-danger" data-bs-target="#modalValideDeleteAudio" style="margin-right:0.2rem; width:fit-content;"><img src="~/icons/deleteIcon.svg" /></button>
                                    </div>
                                    <div class="row" style="justify-content:center;">
                                        <br />
                                        @if (!audio.EstPublier)
                                        {
                                            <form method="post">
                                                <input name="idAudio" hidden value="@audio.ID" />
                                                <button type="submit" class="btn btn-outline-primary form-control" style="margin-top:10px; width:10em;">Publier</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form method="post">
                                                <input name="idAudio" hidden value="@audio.ID" />
                                                <button type="submit" class="btn btn-outline-primary form-control" style="margin-top:10px; width:10em;">Rendre non public</button>
                                            </form>
                                        }

                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <br />
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <p style="text-align:center;">Aucun podcast</p>
                            </div>
                        </div>
                    </div>
                }
                <!-- Modal -->
                <div class="modal" id="modalValideDeleteAudio" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalValideDeleteLabelAudio" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalValideDeleteLabelAudio">Confirmation!</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Cette action n’est pas réversible, est-ce que vous voulez vraiment supprimer ce podcast?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="confirmSuppressionPodcast()">Oui</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (ViewData["Tab"].ToString() == "categories")
            {

                <form method="post" id="form-categorie">
                    <div class="row">
                        <div class="col-12">
                            <h3>Ajouter une catégorie</h3>
                            <br />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2"></div>
                        <div class="col-4">
                            <input type="text" class="form-control" placeholder="Nom catégorie" id="nomCat" required name="nomCat" max="50" min="1" />
                            <br />
                        </div>
                        <div class="col-4">
                            <button id="btnAjoutCategorie" class="btn btn-primary form-control" )" asp-page-handler="AjoutCategorie">Ajouter</button>
                        </div>
                        <div class="col-2"></div>
                        <br />
                        <hr />
                    </div>
                </form>

                @if (lstCategorie is not null)
                {
                    @foreach (var categorie in lstCategorie)
                    {
                        <div class="list-group-item ">
                            <div class="row">
                                <div class="col-6">
                                    <p>@categorie.Nom</p>
                                </div>
                                <div class="col-3">
                                </div>
                                <div class="col-sm">
                                    <form method="post">
                                        <input type="hidden" name="supprCatVal" value="@categorie.Id" />
                                        <input type="submit" value="Supprimer" class="btn btn-danger form-control" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <br />
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <p style="text-align:center;">Aucune catégorie</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else if (ViewData["Tab"].ToString() == "tutoriels")
            {
                <form method="post" style="display:flex; justify-content: right;">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Recherche" required name="rechercheValeurTuto">
