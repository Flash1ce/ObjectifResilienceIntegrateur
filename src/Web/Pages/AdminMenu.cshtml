                {
                    foreach (Tutos tuto in lstTutos)
                    {
                        @if (!tuto.EstPublier)
                        {
                            <a href="/Tutoriel/CreationTuto?handler=TutoRangee&id=@tuto.Id">
                                <div class="list-group-item ">
                                    <div class="row">
                                        <div class="col-9">
                                            <div class="row">
                                                <div class="col-2">
                                                    @if (tuto.EstPublier)
                                                    {
                                                        <img src="~/icons/published.svg" style="width:2em; height:2em;" />
                                                    }
                                                    else
                                                    {
                                                        <img src="~/icons/unpublished.svg" style="width:2em; height:2em;" />
                                                    }
                                                </div>
                                                <div class="col-8">
                                                    <h3>@tuto.Titre</h3>
                                                </div>
                                            </div>
                                            <div class="row">
                                                @if (tuto.EstPublier)
                                                {
                                                    <p style="text-align:center;">Status: Publié</p>
