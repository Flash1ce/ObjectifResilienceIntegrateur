@page
@using Web.Pages
@using Domain.Entities
@model Web.Pages.NewPagesModel
@{ ViewData["Title"] = "New page"; }





@{ NewPage aNewPage = ViewData["newPage"] as NewPage;
    string newPageContent = aNewPage.InerText;



    <h2 style="margin-bottom: 2rem; text-align: center">@aNewPage.Titre</h2>

    <div>
        @if (aNewPage.LienImg != null)
        {
            <img src="https://mediafileobjectifresiliance.s3.ca-central-1.amazonaws.com/@aNewPage.LienImg" class="divBanner" style="width: 100%; margin-bottom: 2rem;" />
        }
    </div>



    <div id="container" class="container">
        <div>
            <script>
            var article = '@newPageContent';
            tst = document.getElementById('container')


            function htmlDecode(input) {
                var e = document.createElement('div');
                e.innerHTML = input;
                return e.childNodes[0].nodeValue;
            }

            var tst2 = htmlDecode(article)
            tst.innerHTML += tst2;
            </script>
        </div>
    </div>
}

