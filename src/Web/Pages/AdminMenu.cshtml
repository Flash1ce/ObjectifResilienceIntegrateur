@page
@using FctUtils
@using Web.Pages
@model Web.Pages.AdminMenuModel
@using Domain.Entities
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Admin menu";
    User userRole1 = (User)ViewData["selectedUser"];
    IList<User> userList1 = (IList<User>)ViewData["lstUsers"];
    List<(User, List<Role>)> lstTupleUser = (List<(User, List<Role>)>)ViewData["tupleUsers"];
    List<CategoriesTutos> lstCategorie = (List<CategoriesTutos>)ViewData["lstCategories"];
}
<!-- Entête de la page (Titre + btn retour) -->
<nav class="navbar navbar-light shadow-sm">
    <div class="container-fluid">
        <h1>Panel Admin</h1>
    </div>
</nav>
<br />
<div class="container">
    <nav>
        <div class="nav nav-tabs">
            @if (ViewData["Tab"] is not null)
            {
                @if (ViewData["Tab"].ToString() == "utilisateurs")
                {
                    <a href="?tab=utilisateurs" class="nav-link active">Utilisateurs</a>
                    <a href="?tab=roles" class="nav-link">Rôles</a>
                    <a href="?tab=demandes" class="nav-link">Demandes</a>
                    <a href="?tab=poadcasts" class="nav-link">Poadcasts</a>
                    <a href="?tab=categories" class="nav-link">Categories</a>
                    <form method="post" style="display:flex; justify-content: right;">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Recherche" required name="rechercheValeurUtilisateur">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="submit"><img style="width:40%;" src="~/icons/searchIcon.svg" /></button>
                            </div>
                        </div>
                    </form>
                }
                @if (ViewData["Tab"].ToString() == "roles")
                {
                    <a href="?tab=utilisateurs" class="nav-link">Utilisateurs</a>
                    <a href="?tab=roles" class="nav-link active">Rôles</a>
                    <a href="?tab=demandes" class="nav-link">Demandes</a>
                    <a href="?tab=poadcasts" class="nav-link">Poadcasts</a>
                    <a href="?tab=categories" class="nav-link">Categories</a>
                }
                @if (ViewData["Tab"].ToString() == "demandes")
                {
                    <a href="?tab=utilisateurs" class="nav-link">Utilisateurs</a>
                    <a href="?tab=roles" class="nav-link">Rôles</a>
                    <a href="?tab=demandes" class="nav-link active">Demandes</a>
                    <a href="?tab=poadcasts" class="nav-link">Poadcasts</a>
                    <a href="?tab=categories" class="nav-link">Categories</a>
                    <form method="post" style="display:flex; justify-content: right;">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" type="search" placeholder="Recherche" required name="rechercheValeurDemande">
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary" type="submit"><img style="width:40%;" src="~/icons/searchIcon.svg" /></button>
                            </div>
                        </div>
                    </form>
                }
                @if (ViewData["Tab"].ToString() == "poadcasts")
                {
                    <a href="?tab=utilisateurs" class="nav-link">Utilisateurs</a>
                    <a href="?tab=roles" class="nav-link">Rôles</a>
                    <a href="?tab=demandes" class="nav-link">Demandes</a>
                    <a href="?tab=poadcasts" class="nav-link active">Poadcasts</a>
                    <a href="?tab=categories" class="nav-link">Categories</a>
                }
                @if (ViewData["Tab"].ToString() == "categories")
                {
                    <a href="?tab=utilisateurs" class="nav-link">Utilisateurs</a>
                    <a href="?tab=roles" class="nav-link">Rôles</a>
                    <a href="?tab=demandes" class="nav-link">Demandes</a>
                    <a href="?tab=poadcasts" class="nav-link">Poadcasts</a>
                    <a href="?tab=categories" class="nav-link active">Categories</a>
                }
            }
        </div>
    </nav>
    <br />
    <table class="table">
        @if (ViewData["Tab"] is not null)
        {
            @if (@ViewData["Tab"].ToString() == "roles")
            {
                <thead>
                    <tr>
                        <th scope="col">Utilisateurs</th>
                        <th scope="col">Rôles</th>
                    </tr>
                </thead>
                <tr>
                    <th>
                        <div class="list-group" id="myList" role="tablist">
                            @if (ViewData["selectedUser"] is not null)
                            {
                                <h3>Utilisateur Selectionné</h3>
                                <a class="list-group-item list-group-item-action">@userRole1.Email</a>
                            }
                        </div>
                        <br />
                        <br />
                        <form method="post" style="display:flex; justify-content: space-evenly;">
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" type="search" placeholder="Recherche" required name="rechercheValeurUtilisateurRole">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" type="submit"><img style="width:40%;" src="~/icons/searchIcon.svg" /></button>
                                </div>
                            </div>
                        </form>
                        <br />
                        <div class="list-group" id="myList" role="tablist">
                            @if (ViewData["lstUsers"] is not null && userList1.Count > 0)
                            {
                                @foreach (var user in ViewData["lstUsers"] as IList<User>)
                                {
                                    <a href="?tab=roles&guid=@user.Id" class="list-group-item list-group-item-action">@user.Email</a>
                                }
                            }
                            else
                            {
                                <div class="container">
                                    <div class="row alert alert-info" style="background-color:#cfe2ff;">
                                        <div class="col-12">
                                            <p style="text-align:center;color:#084298;">Aucun résultats</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </th>
                    <th>
                        <br />
                        <br />
                        @if (ViewData["msgErreur"] is not null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <div class="row">
                                    @ViewData["msgErreur"]
                                </div>
                            </div>
                        }
                        @if (ViewData["userRoles"] is not null)
                        {
                            <div class="container">

                                @foreach (var roleUser in ViewData["userRoles"] as List<Role>)
                                {
                                    <div class="list-group-item">
                                        <div class="row">
                                            <div class="col-8">
                                                <p>@roleUser.Name</p>
                                            </div>
                                            <div class="col-4">
                                                <form method="post">
                                                    <input type="hidden" name="name" asp-for="@roleUser.Name" />
                                                    <input name="btnDeleteRole" type="submit" value="Retirer" class="btn btn-danger form-control" />
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="list-group-item">
                                    <form method="post">
                                        <div class="row">
                                            <div class="col-8">
                                                <p>Sélectionner un rôle à ajouter :</p>
                                                <select class="form-control" name="selectRole">
                                                    @foreach (var roleSelect in ViewData["selectRoles"] as List<Role>)
                                                    {
                                                        <option value="@roleSelect.Name">@roleSelect.Name</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="col-4" style="align-self:end;">
                                                <input name="btnAjoutRole" type="submit" value="Ajouter" class="btn btn-primary form-control" />
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="container">
                                <div class="row alert alert-info" style="background-color:#cfe2ff;">
                                    <div class="col-12">
                                        <p style="text-align:center;color:#084298;">Sélectionner un utilisateur afin d'afficher ces rôles.</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </th>

                </tr>
            }
            @if (@ViewData["Tab"].ToString() == "utilisateurs")
            {
                <thead>
                    <tr>
                        <th scope="col">Actif</th>
                        <th scope="col">Courriel</th>
                        <th scope="col">Rôles</th>
                        <th scope="col">Date de création</th>
                        <th scope="col"><a asp-page="user" asp-route-id="" class="btn btn-primary btn-sm"><img src="~/icons/addIcon.svg" /></a></th>
                    </tr>
                </thead>
                @if (ViewData["tupleUsers"] is not null && lstTupleUser.Count > 0)
                {
                    @foreach (var tupleUser in ViewData["tupleUsers"] as List<(User, List<Role>)>)
                    {
                        <tbody>
                            <tr>
                                @if (tupleUser.Item1.Active == true)
                                {
                                    <td><img src="~/icons/valide.svg" style="width: 1em; height:1em;" /></td>
                                }
                                else
                                {
                                    <td></td>
                                }
                                <td>@tupleUser.Item1.Email</td>
                                <td>
                                    @foreach (var role in tupleUser.Item2 as List<Role>)
                                    {
                                        <p>@role</p>
                                    }
                                </td>
                                <td>@tupleUser.Item1.CreationDate.ToString("dd/MM/yyyy")</td>
                                <td><a asp-page="user" asp-route-id="@tupleUser.Item1.Id" class="btn btn-primary btn-sm"><img src="~/icons/editIcon.svg" style="width:2em;height:2em;" /></a></td>
                            </tr>
                        </tbody>
                    }
                }
                else
                {
                    <div class="container">
                        <div class="row alert alert-info" style="background-color:#cfe2ff;">
                            <div class="col-12">
                                <p style="text-align:center;color:#084298;">Aucun résultats</p>
                            </div>
                        </div>
                    </div>
                }
            }
            @if (ViewData["Tab"].ToString() == "demandes")
            {
                @if (ViewData["lstNonActiver"] is not null)
                {
                    @foreach (var user in ViewData["lstNonActiver"] as List<User>)
                    {
                        <div class="list-group-item ">
                            <div class="row">
                                <div class="col-6">
                                    <p>@user.UserName</p>
                                </div>
                                <div class="col-3">
                                    <form method="post">
                                        <input type="hidden" name="name" value="@user.Id" />
                                        <input name="btnAccepter" type="submit" value="Accepter" class="btn btn-primary form-control" />
                                    </form>
                                </div>
                                <div class="col-sm">
                                    <form method="post">
                                        <input type="hidden" name="name" value="@user.Id" />
                                        <input name="btnRefuser" type="submit" value="Refuser" class="btn btn-danger form-control" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <br />
                    <div class="container">
                        <div class="row alert alert-info" style="background-color:#cfe2ff;">
                            <div class="col-12">
                                <p style="text-align:center;color:#084298;">Aucune demande</p>
                            </div>
                        </div>
                    </div>
                }
            }
            @if (ViewData["Tab"].ToString() == "poadcasts")
            {
                @if (ViewData["lstAudios"] is not null)
                {
                    @foreach (var audio in ViewData["lstAudios"] as IList<Audio>)
                    {
                        if (audio.EstPublier == false)
                        {
                            <a asp-page="./AudioFolder/PoadcastDetail" asp-route-id="@audio.ID">
                                <div class="searchBar-container borderPoadcast">

                                    <div>
                                        <img class="sizeImage" src="@audio.urlImage">
                                    </div>
                                    <div>
                                        titre : @audio.titre
                                    </div>

                                </div>
                            </a>
                        }
                    }
                }
                else
                {
                    <br />
                    <div class="container">
                        <div class="row alert alert-info" style="background-color:#cfe2ff;">
                            <div class="col-12">
                                <p style="text-align:center;color:#084298;">Aucun poadcast</p>
                            </div>
                        </div>
                    </div>
                }

            }
            @if (ViewData["Tab"].ToString() == "categories")
            {
                <form method="post">
                    <div class="row">
                        <div class="col-8">
                            <input type="text" class="form-control" placeholder="Nom catégorie" required name="nomCat" max="50" min="1" />
                            <br />
                            <textarea placeholder="Description catégorie" class="form-control" id="desc" name="descCat" rows="3"></textarea>
                            <br />
                        </div>
                        <div class="col-4">
                            <input name="btnAjoutCategorie" type="submit" value="Ajouter" class="btn btn-primary form-control" />
                        </div>
                        <br />
                        <hr />
                    </div>
                </form>
                @if (lstCategorie is not null)
                {
                    @foreach (var categorie in lstCategorie)
                    {
                        <div class="list-group-item ">
                            <div class="row">
                                <div class="col-6">
                                    <p>@categorie.Nom</p>
                                    <p>@categorie.Description</p>
                                </div>
                                <div class="col-3">
                                </div>
                                <div class="col-sm">
                                    <form method="post">
                                        <input type="hidden" name="supprCatVal" value="@categorie.Id" />
                                        <input type="submit" value="Supprimer" class="btn btn-danger form-control" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <br />
                    <div class="container">
                        <div class="row alert alert-info" style="background-color:#cfe2ff;">
                            <div class="col-12">
                                <p style="text-align:center;color:#084298;">Aucune catégorie</p>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </table>
</div>
