                                                    @if (tuto.EstPublier)
                                                    {
                                                        <img src="~/icons/published.svg" style="width:2em; height:2em;" />
                                                    }
                                                    else
                                                    {
                                                        <img src="~/icons/unpublished.svg" style="width:2em; height:2em;" />
                                                    }
                                                </div>
                                                <div class="col-8">
                                                    <h3>@tuto.Titre</h3>
                                                </div>
                                            </div>
                                            <div class="row">
                                                @if (tuto.EstPublier)
                                                {
                                                    <p style="text-align:center;">Status: Publié</p>
                                                }
                                                else
                                                {
                                                    <p style="text-align:center;">Status: Non publié</p>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="row" style="justify-content:center;">
                                                <form method="post">
                                                    <input type="hidden" name="name" value="@tuto.Id" />

                                                    <input name="btnSupprimerTuto" type="submit" value="Supprimer" class="btn btn-danger form-control" style="width: 10em; margin-top: 10px;" />
