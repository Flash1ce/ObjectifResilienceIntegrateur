@page
@using Web.Pages
@using Domain.Entities
@model Web.Pages.ArticleModel
@{ ViewData["Title"] = "Home page"; }


<div id="container" class="container">


    @{ Article unArticle = ViewData["unArticle"] as Article;
        string articleC = unArticle.InerText;
        var imageRef = ViewData["uneImage"];

        <h2 style="margin-bottom: 2rem; text-align: center">@unArticle.Titre</h2>



        @if (@unArticle.LienImg != null)
        {
            <img style="margin-bottom: 2rem; width: 100%" src="https://mediafileobjectifresiliance.s3.ca-central-1.amazonaws.com/@unArticle.LienImg"  class="divBanner" >
        }

        <div>
            <script>
            var article = '@articleC';
            tst = document.getElementById('container')


            function htmlDecode(input) {
                var e = document.createElement('div');
                e.innerHTML = input;
                return e.childNodes[0].nodeValue;
            }

            var tst2 = htmlDecode(article)
            tst.innerHTML += tst2;
            </script>
        </div>
    }

    @if (ViewData["estAdmin"] as string == "true")
    {
        <a href="/CreationArticle?id=@unArticle.Id" class="btn">Modifier</a>
    }


</div>
